#!/usr/bin/env php
<?php

use rdx\readerrorlog\Application;
use rdx\readerrorlog\LogManager;

if (
	!file_exists($file = __DIR__ . '/../../../autoload.php') &&
	!file_exists($file = __DIR__ . '/../../autoload.php') &&
	!file_exists($file = __DIR__ . '/vendor/autoload.php') &&
	!file_exists($file = __DIR__ . '/../vendor/autoload.php')
) {
	exit("Missing autoload.php... Project installed?\n");
}
require $file;

$app = new Application(new LogManager(getcwd()));
$app->run();
